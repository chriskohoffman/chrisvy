// Fonts
// Alda (400,700)
@import url("https://use.typekit.net/dqd3zrm.css");
@import url('https://fonts.googleapis.com/css?family=Parisienne');




// ------- D E C L A R A T I O N S  ------- //

// Colors
charcoal = #2D2E30
nardo = #d9d5ce
grigio = #9a9499
gold = #ebae34

// Fonts
heading = "alda"
ampersand = "bickham-script-pro-3"
body = "alda"
body-sans = "aktiv-grotesk"


.step1, .step2, .step3
	background-color transparent !important


// ------- G L O B A L ------- //
::selection
	background gold
	
::-moz-selection
	background gold 

html
	font-size 62.5%
	overflow-x hidden
	box-sizing border-box


body
	font-family body
	font-weight 400
	background-size cover !important
	font-size 1.4rem
	margin 80px 0 0 0
	
	&#home
		background url('../../assets/backgrounds/bg.jpg') right center no-repeat fixed
		margin-top 0
		
	&#rsvp
		background url('../../assets/backgrounds/rsvp.jpg') center center no-repeat fixed
	
	&#details
		background url('../../assets/backgrounds/belvedere3.jpg') left top no-repeat fixed
		
	// &#gifts
		// background url('../../assets/backgrounds/bg.jpg') right center no-repeat fixed
	
	&#proposal
		background url('../../assets/backgrounds/cinqueterre.jpg') right center no-repeat fixed
		
	// &#photos
	// 	background url('../../assets/backgrounds/bg.jpg') right center no-repeat fixed
		
	&#entourage
		background url('../../assets/backgrounds/bg.jpg') right center no-repeat fixed

	
a
	color default
	text-decoration none
	transition ease-in 150ms
	
	
	&:hover
		color gold * 0.5
		
h1
	font-size 6rem
	font-weight 100
	font-family body-sans
	color gold
		
h2 
	font-size 3rem
	font-weight 100
	margin-top -8px
	color gold
		
h4
	font-family body-sans
	font-size 2.1rem
	font-weight 300
	margin 0 0 10px
	text-align center
	
h5
	font-family body-sans
	font-weight 700
	color nardo
	text-transform lowercase
	font-variant small-caps
	margin-bottom 0
	letter-spacing 0.2rem
	font-size 2rem
	
.bodytext
	font-size 16px
	font-weight 300
	font-family body-sans
	

	
.detailtext
	font-size 2.1rem
	line-height 2.4rem
	font-weight 200
	font-family body
	color gold
	
.nomargin
	margin 0
	

// Video bg
.videobg
	position fixed
	top 0
	left 0
	overflow hidden
	z-index -100
	width 100%
	height 100%
	
	& .video
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		object-fit cover
	
// ------- L I G H T T H E M E ------- //
.light
	& h4
		color charcoal
		font-weight 400
		font-family body
		



// Coming Soon
#centerText
	display flex
	align-items center
	justify-content center
	flex-direction column
	height 85%
	color nardo
	
	& h1
		font-family heading
		color gold
		font-size 6.5rem
		font-weight 100
		margin-bottom -22px
		
p.mediumtext
	font-size 2rem
	color nardo

p.smalltext
	font-size 1.4rem
	color grigio
		
.bottom
	display flex
	flex-direction column
	justify-content	center
	align-items	center
	height 15%
	
#cvlogo
	width 300px
	opacity 1

#cvlogo-main
	width 125px
	opacity 1
	
#cvlogo-sm
	width 80px
	margin-bottom 30px
	


// New Index
.left-links,
.right-links
	width 30%
	position relative
	height 250px
	
	// .toplinks AND .bottomlinks
	& > div
		display flex
		height 50%
		position relative
		
		// mainlink-container
		& > div
			width 50%
			position relative
			height 100%
			box-sizing border-box
		
		// mainlinks animation
		& > div > a /* This is for the links */
			height 100%
			position relative
			width 100%
			display flex
			align-items center
			justify-content center
			border-right 1px solid rgba(nardo, 0.7)
			box-sizing border-box
			
			font-size 3rem
			color gold
			text-decoration none
			font-weight 100
			line-height 3rem

				
			
		
.left-links > div
	right 0
	
	& > .mainlink-container
		
		&:last-child
			margin-right none
			
			& > a
				border none

.right-links > div > .mainlink-container:last-child
	margin-right none
	
	& > a 
		border none

.top-links
	border-bottom 1px solid rgba(nardo, 0.7)
	
	& div:first-child > a:hover
		box-shadow 1px 1px 0px gold
		
	& div:last-child > a:hover
		box-shadow -1px 1px 0px gold
		
.bottom-links
	& div:first-child > a:hover
		box-shadow 1px -1px 0px gold
		
	& div:last-child > a:hover
		box-shadow -1px -1px 0px gold
	
#centernav
	display flex
	align-items center
	justify-content center
	flex-direction row
	height 100%
	width 100%
	color nardo
	height 65%
	
	& h1
		font-family heading
		color gold
		font-size 6.5rem
		font-weight 100
		margin-bottom -22px
		
	& img
		margin 0 50px
		
.contentarea
	display flex
	justify-content center
	flex-direction column
	height 100%
	color nardo

		
	
.navbar
	top 3%
	width 100%
	display flex
	align-items center
	justify-content center
	position absolute
	z-index 999

	
	& a
		font-family body-sans !important
		font-size 15px
		text-transform uppercase
		letter-spacing 0.5rem
		color gold
		
.left
	align-items flex-start
	margin-right 20px
	
.center
	align-items center
	
.right
	align-items flex-end
	margin-left 30px
	
.container
	margin 0 30px
	width 100%
	display flex
	
.column
	flex-direction column
	
.row
	flex-direction row 
	align-items flex-start 
	justify-content flex-start 



// Wedding Detail Specific CSS
.details
	width 30%
	
	& .detailtext
		color charcoal
		margin 0 0 30px
		
#details
	a.body-links
		color charcoal
		border-bottom 2px dotted gold

		
		&:hover
			color gold

	& h2
		color charcoal
		margin-bottom 30px
		
	& h5
		color gold
		margin 0
		
	& > .contentarea
		justify-content flex-start
	
	& .navbar
		justify-content flex-start
		left 0
		width auto
		margin-left 30px
		

// gifts
#gifts
	& > .contentarea
		justify-content flex-start
		align-items center
	
	h1
		margin-top 0
		margin-bottom 10px
		
	a.body-links
		border-bottom 2px dotted gold
		color charcoal
		
	.bodytext
		width 50%
		color charcoal
		font-size 2.4rem
		line-height 2.6rem
		text-align center
		margin 10px 0
	
	& .footnote
		position fixed
		bottom 20px
		display flex
		align-items center
		flex-direction column
		width 100%
		
		& p
			font-family body-sans
			background-color rgba(black,0.7)
			padding 12px 15px
			border-radius 2px
			color nardo
			margin 2px 0
			text-align center
			
			&:first-child
				font-size 1.2rem
				font-weight 600
				color gold
				text-transform uppercase
		
// rsvp
div.rsvp
	height 950
	
// Proposal Specific CSS
