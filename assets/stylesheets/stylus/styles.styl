// New Index
.left-links,
.right-links
	width 30%
	position relative
	height 250px
	
	// .toplinks AND .bottomlinks
	& > div
		display flex
		height 50%
		position relative
		
		// mainlink-container
		& > div
			width 50%
			position relative
			height 100%
			box-sizing border-box
		
		// mainlinks animation
		& > div > a /* This is for the links */
			height 100%
			position relative
			width 100%
			display flex
			align-items center
			justify-content center
			border-right 1px solid rgba(nardo, 0.7)
			box-sizing border-box
			
			font-size 3rem
			color gold
			text-decoration none
			font-weight 100
			line-height 3rem

				
			
		
.left-links > div
	right 0
	
	& > .mainlink-container
		
		&:last-child
			margin-right none
			
			& > a
				border none

.right-links > div > .mainlink-container:last-child
	margin-right none
	
	& > a 
		border none

.top-links
	border-bottom 1px solid rgba(nardo, 0.7)
	
	& div:first-child > a:hover
		box-shadow 1px 1px 0px gold
		
	& div:last-child > a:hover
		box-shadow -1px 1px 0px gold
		
.bottom-links
	& div:first-child > a:hover
		box-shadow 1px -1px 0px gold
		
	& div:last-child > a:hover
		box-shadow -1px -1px 0px gold
	
