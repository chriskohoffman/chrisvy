@media only screen and (min-device-width: 320px) and (max-device-width: 720px)

	#centernav
			flex-direction column
			
			& > img
				margin 15px 0 -5px
			
	.left-links,
	.right-links
		width 90%
		position static
		
	.left-links
		top 0
	
	// Proposal
		
	.cinqueterre-overlay
		display none;
		
	div.proposal
		justify-content none
		margin-top 0
		

		
		& .description
			margin-right 0
			width 80%
			background-color rgba(white, 0.8)
						
	#proposal
		background url('../../assets/backgrounds/cinqueterre-mobile.jpg') right center no-repeat fixed
